@inject IRainSensorService rainSensorManager

<DxGrid CssClass="w-100"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        Data="@rainSensors" KeyFieldName="Id"
        FocusedRowEnabled="false" PageSize="5"
        ShowFilterRow="false" ShowGroupedColumns="false" ShowSearchBox="false">
    <Columns>
        <DxGridDataColumn FieldName="Id" Caption="Id" Width="110" TextAlignment="GridTextAlignment.Center" />
        <DxGridDataColumn FieldName="isRain" Caption="Yağmur Bilgisi" MinWidth="100" TextAlignment="GridTextAlignment.Center">
            <CellDisplayTemplate>
                @if (context.Value is 1)
                {
                    <img src="images/rain.png" style="height:40px; width:40px;" />
                }
                else
                {
                    <img src="images/sun.png" style="height:40px; width:40px;" />
                }
            </CellDisplayTemplate>
        </DxGridDataColumn>
        <DxGridDataColumn FieldName="Date" Caption="Tarih" MinWidth="100" TextAlignment="GridTextAlignment.Center" />
    </Columns>

</DxGrid>


@code {
    public List<RainSensor>? rainSensors { get; set; }

    protected override async Task OnInitializedAsync()
    {
        rainSensors = await rainSensorManager.GetList();
    }
}
