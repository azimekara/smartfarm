@inject IRainSensorService rainSensorManager
@inject IRoofActivityService roofActivityManager
<DxGrid CssClass="w-100"
        PagerNavigationMode="PagerNavigationMode.InputBox"
        Data="@roofActivities" KeyFieldName="Id"
         PageSize="5"
        ShowFilterRow="false" ShowGroupedColumns="false" ShowSearchBox="false">
    <Columns>
        <DxGridDataColumn FieldName="Id" Caption="Id" Width="110" TextAlignment="GridTextAlignment.Center" />
        <DxGridDataColumn FieldName="ActivityType" Caption="Yapılan Aktivite" MinWidth="100" TextAlignment="GridTextAlignment.Center">
            <CellDisplayTemplate>
                @if (context.Value is 1)
                {
                    <img src="images/slow.png" style="height:40px; width:40px;" />
                }
                else if (context.Value is 2)
                {
                    <img src="images/normal.png" style="height:40px; width:40px;" />
                }
                else if (context.Value is 3)
                {
                    <img src="images/fast.png" style="height:40px; width:40px;" />
                }
                else
                {
                    <img src="images/close.png" style="height:40px; width:40px;" />
                }


            </CellDisplayTemplate>
        </DxGridDataColumn>
    </Columns>

</DxGrid>


@code {

    public List<RoofActivity>? roofActivities { get; set; }

    protected override async Task OnInitializedAsync()
    {
        roofActivities = await roofActivityManager.GetRoofActivities();
    }

}
