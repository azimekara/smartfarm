
@inject IRainSensorService rainSensorManager
@inject IChartService chartManager

<DxChart Data="@rainChartDtos">
    <DxChartTitle CssClass="mb-2" Text="Yağmur Sensöründen Alınan Verilerin Grafiği">

    </DxChartTitle>
    <DxChartBarSeries ArgumentField="@((RainChartDto f) =>f.ChartBarName)"
                      ValueField="@((RainChartDto f) =>f.ChartValue)" Name="Veri Sayısı">
    </DxChartBarSeries>

</DxChart>

@code {
    List<RainChartDto>? rainChartDtos { get; set; }

    protected override async Task OnInitializedAsync()
    {
        rainChartDtos =await chartManager.GetChartData();
    }
}
